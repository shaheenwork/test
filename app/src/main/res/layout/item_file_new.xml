<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/view_file"
    android:layout_width="match_parent"
    android:background="@drawable/shape_white_button"
    android:gravity="center_vertical"
    android:weightSum="3"
    android:paddingEnd="@dimen/item_file_padding_end"
    android:paddingStart="@dimen/item_file_padding_end"
    android:paddingTop="@dimen/item_file_padding"
    android:paddingBottom="@dimen/item_file_padding"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_file_type"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:layout_weight=".55"
        android:scaleType="centerInside"
        android:layout_height="@dimen/item_file_image_height"
        android:src="@drawable/pdf"

        />

    <TextView
        android:id="@+id/txt_filename"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_marginEnd="@dimen/item_file_text_margin"
        android:maxLines="4"
        android:textAlignment="textEnd"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:textSize="@dimen/message_area_text_small"
        android:textColor="@color/colorAccent"
        android:layout_weight="2.45"/>





</LinearLayout>